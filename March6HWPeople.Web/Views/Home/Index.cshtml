@using March6People.Data
@model PeopleViewModel

@if (!String.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div b-ud2x8zyu5z class="container">
        <main b-ud2x8zyu5z role="main" class="pb-3">
            <div class="row">
    <div class="col-md-12">
        <a href="/home/addPeople" class="btn btn-success">Add People</a>
        <form method="post" action="/home/deleteall">
        <table class="table table-hover table-bordered">
     <thead>
            <tr>
                <th style="width:10%">
                    <button class="btn btn-danger">Delete All</button>
                </th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
          
            </tr>
  </thead>
  <tbody>
                            @foreach(Person person in Model.People)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="ids" value="@person.Id" />
                                    </td>
                                    <td>@person.FirstName</td>
                                    <td>@person.LastName</td>
                                    <td>@person.Age</td>
                                   
                                </tr>
                            }
                        </tbody>
                        </table>
    
                        </form>
